me = game.Players.werrrrolo
function onChatted(msg)
msg = msg
if string.match(msg, "marshmallowify/") then
players = game.Players:GetChildren()
for i = 1,#players do
if string.match(msg, string.lower(players[i].Name)) then
players[i].Character.Head.face:remove()
players[i].Character.Head.BrickColor = BrickColor.new("1")
players[i].Character.Head.Mesh.Scale = Vector3.new(8.7, 8.7, 8.7)
players[i].Character.Name = "Marshmellow"
players[i].Character.Humanoid.MaxHealth = math.huge
end
end
end
end
me.Chatted:connect(onChatted)
